     <%= stylesheet_link_tag    'profiles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <!--MOST IMPORTANT TO RENDER PAGES IN THE FILE-->
    <%= yield %>
    
